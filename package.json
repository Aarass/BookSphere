{
  "name": "booksphere",
  "version": "1.0.0",
  "description": "A web application for discovering popular books through personalized recommendations and enabling real-time interactions via book clubs and social features.",
  "homepage": "https://github.com/Aarass/BookSphere#readme",
  "bugs": {
    "url": "https://github.com/Aarass/BookSphere/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Aarass/BookSphere.git"
  },
  "license": "MIT",
  "author": "",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "api:start": "tsx ./app/api/index.ts",
    "api:watch": "tsx watch ./app/api/index.ts",
    "api:test": "echo \"Error: no test specified\" && exit 1",
    "api:build": "echo \"Not implemented\" && exit 1",
    "client:dev": "vite ./app/client/",
    "client:start": "vite ./app/client/",
    "client:build": "vite build ./app/client/",
    "client:preview": "vite preview ./app/client/",
    "client:lint": "eslint ./app/client/",
    "dbs:start": "docker-compose -f ./app/databases/compose.yaml up -d",
    "dbs:stop": "docker-compose -f ./app/databases/compose.yaml stop",
    "dbs:repopulate": "tsx ./app/databases/repopulate.ts",
    "app:start": "run-p api:watch client:start"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.1.1",
    "@reduxjs/toolkit": "^2.0.1",
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.5",
    "autoprefixer": "^10.4.20",
    "bcrypt": "^5.1.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "connect-redis": "^8.0.1",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "express-session": "^1.18.1",
    "http-errors": "^2.0.0",
    "lucide-react": "^0.471.1",
    "mongodb": "^6.17.0",
    "neo4j-driver": "^5.27.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-redux": "^9.1.0",
    "react-toastify": "^11.0.3",
    "redis": "^4.7.0",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "tailwind-merge": "^2.6.0",
    "tailwindcss": "^3.4.17",
    "tailwindcss-animate": "^1.0.7",
    "uuid": "^11.0.5",
    "vitest": "^2.1.8"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express-session": "^1.18.1",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-plugin-prettier": "^5.1.3",
    "jsdom": "^23.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.1",
    "tsx": "^4.19.2",
    "typescript": "^5.3.3",
    "vite": "^5.0.11"
  }
